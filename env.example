# Configuration du serveur
PORT=3000
NODE_ENV=development

# Configuration du stockage de fichiers
# Définir sur 'local' pour stocker les fichiers localement dans le dossier public/
# Laisser vide ou définir autre chose pour utiliser Backblaze B2
FILE_STORAGE=local

# Configuration Backblaze B2 (optionnel si FILE_STORAGE=local)
APP_KEY=your_backblaze_app_key
KEY_ID=your_backblaze_key_id
BUCKET_ID=your_bucket_id
BUCKET_NAME=your_bucket_name

# Configuration de la base de données MongoDB (REQUIS pour le stockage des métadonnées)
MONGODB_URI=mongodb://localhost:27017/files-service

# Configuration CORS (optionnel)
CORS_ORIGIN=http://localhost:3000

# Configuration de la base de données (optionnel)
DB_NAME=files-service
DB_HOST=localhost
DB_PORT=27017
